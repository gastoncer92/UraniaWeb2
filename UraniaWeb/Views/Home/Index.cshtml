<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<link rel="stylesheet" href="~/css/site.css" />

@model IEnumerable<UraniaWeb.Models.Article>
@{
    ViewData["Title"] = "Home Page";
}


<!--REDES SOCIALES-->
<div class="align-content-center text-center nene" >
    <h1 class="mt-3">Seguinos en nuestras redes sociales</h1>
    <a href="https://facebook.com/prensapehuajo/" target="_blank"><i class="fa fa-facebook-square fa-5x" aria-hidden="true"></i></a>
    <a href="https://twitter.com/prensapehuajo" target="_blank"><i class="fa fa-twitter-square fa-5x" aria-hidden="true"></i></a>
    <a href="https://www.youtube.com/user/prensapehuajo" target="_blank"><i class="fa fa-youtube-square fa-5x" aria-hidden="true"></i></a>
    <a href="https://www.instagram.com/prensapehuajo/" target="_blank"><i class="fa fa-instagram  fa-5x" aria-hidden="true"></i></a>
</div>






<div class="row fondoTitulo mt-5">
    <div class="col-sm-12">
        <h1 class="text-center text-black" style="font-size: 2em">Últimas Noticias</h1>
    </div>
</div>

@if (Model.Count() > 0)
{
    @foreach (var item in Model.OrderBy(i => i.IdAticle))
    {
        <div class="card" style="width: 18rem;">
            <img src="@Html.DisplayFor(modelItem => item.UrlImagen1)" class="card-img-top" alt="...">
            <div class="card-body">
                <h5 class="card-title">@Html.DisplayFor(modelItem => item.TitleArticle)</h5>
                <p class="card-text">@Html.DisplayFor(modelItem => item.DescritionArticle)</p>
                <p class="card-text">@Html.DisplayFor(modelItem => item.DateCreation)</p>
                <a href="#" class="btn btn-primary">Ir al articulo</a>
            </div>
        </div>
    }

}
else
{
    <p>No existen articulos</p>
}